meta {
  name: Generate Names - Historical Pattern
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/generate_name.php?count=5&gender=male&culture=western&method=historical_pattern&type=full_name&period=medieval
  body: none
  auth: none
}

headers {
  X-API-KEY: {{apiKey}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains names array", function() {
    const data = res.getBody();
    expect(data).to.have.property('names');
    expect(data.names).to.be.an('array');
  });
  
  test("Returns correct count of names", function() {
    const data = res.getBody();
    expect(data.names.length).to.equal(5);
  });
}
